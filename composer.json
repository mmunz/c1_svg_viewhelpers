{
    "name": "c1/c1-svg-viewhelpers",
    "description": "SVG viewhelpers - include SVGs as symbol files in TYPO3",
    "homepage": "https://www.comuno.net",
    "license": ["GPL-2.0+"],
    "type": "typo3-cms-extension",
    "keywords": [
        "Viewhelpers",
        "Fluid",
        "Templating",
        "SVG",
        "Symbol"
     ],
    "require": {
        "typo3/cms-core": "^11.5 || ^12"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/vendor/bin",
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "sbuerk/typo3-cmscomposerinstallers-testingframework-bridge": true
        }
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "c1_svg_viewhelpers",
            "app-dir": ".Build",
            "web-dir": ".Build/Web"
        }
    },
    "require-dev": {
        "typo3/cms-composer-installers": "^3.1.3",
        "typo3/testing-framework": "~7.0@dev || dev-main",
        "phpunit/phpunit": "^9.5",
        "helmich/typo3-typoscript-lint": "3.1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.8",
        "saschaegerer/phpstan-typo3": "^1.1",
        "typo3/tailor": "^1.4",
        "phpspec/prophecy": "^1.16",
        "sbuerk/typo3-cmscomposerinstallers-testingframework-bridge": "^0.0.1"
    },
    "autoload": {
        "psr-4": {
            "C1\\SvgViewHelpers\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "C1\\SvgViewHelpers\\Tests\\" : "Tests/"
        }
    },
    "scripts": {
        "ts:lint": "typoscript-lint -c Configuration/TsLint.yml --ansi -n --fail-on-warnings -vvv Configuration/TypoScript/",
        "php:lint": ".Build/vendor/bin/php-cs-fixer fix --diff --dry-run --config .php-cs-fixer.php",
        "php:fix": ".Build/vendor/bin/php-cs-fixer fix --diff --config .php-cs-fixer.php",
        "phpstan": ".Build/vendor/bin/phpstan analyse",
        "tests:unit": "@php .Build/vendor/bin/phpunit -c Tests/UnitTests.xml",
        "tests:functional": "@php .Build/vendor/bin/phpunit -c Tests/FunctionalTests.xml",
        "tests": [
            "@tests:functional"
        ],
        "ci:static": [
            "@phpstan",
            "@php:lint",
            "@ts:lint"
        ]
    }
}
